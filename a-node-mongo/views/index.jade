extends layout

block content
    
    div(class='navbox')
        a(href="javascript:;" onclick="toLogin()") login
        a(href="javascript:;" onclick="toSign()") sign
        a(href="users/pdf", target="_blank") to PDF
        span(style="float:right; font-size:16px") ver1.0.0

    div(class="container")
        p #{error}
        div(id="login")
            h1 LOGIN  
            form(action="/login", method="post")
                table
                    tr
                        td
                            label account
                        td
                            input(type="text", name="username")
                    tr
                        td
                            label password
                        td
                            input(type="password", name="password")
                    tr
                        td
                            button(type="submit") login
                        td
        div(id="sign")
            h1 SIGN
            //a(href="/user") to users
            form(action="/sign", method="post")
                table
                    tr
                        td
                            label account
                        td
                            input(type="text", name="username")
                    tr
                        td
                            label password
                        td
                            input(type="password", name="password")
                    tr
                        td
                            label check password
                        td
                            input(type="password", name="check_password")
                    tr
                        td
                            button(type="submit") sign
                        td
    script(type="text/javascript").
        const disLogin = document.getElementById('login');
        const disSign = document.getElementById('sign');
        disSign.style.display = 'none';
        function toSign() {
            disLogin.style.display = 'none';
            disSign.style.display = 'block';
        }

        function  toLogin() {
            disLogin.style.display = 'block';
            disSign.style.display = 'none';
        }











